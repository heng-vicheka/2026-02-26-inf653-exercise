<div class="item-detail">
  <h1>{{item.name}}</h1>

  <img src="{{item.imagePath}}" alt="{{item.name}}" style="max-width: 100%; height: auto;" />

  <table>
    <tr>
      <th>Status</th>
      <td>{{item.status}}</td>
    </tr>
    <tr>
      <th>Description</th>
      <td>{{item.description}}</td>
    </tr>
    <tr>
      <th>Location</th>
      <td>{{item.location}}</td>      
    </tr>
    <tr>
      <th>Date</th>
      <td>{{item.date}}</td>
    </tr>
    <tr>
      <th>Contact</th>
      <td>{{item.contact}}</td>
    </tr>
  </table>

  <section>
    <h2>Update Status</h2>
    <form action="/items/{{item.id}}/status" method="POST">
      <button type="submit" name="status" value="Lost">Mark as Lost</button>
      <button type="submit" name="status" value="Found">Mark as Found</button>
      <button type="submit" name="status" value="Closed">Mark as Closed</button>
    </form>
  </section>

  <section>
    <h2>Delete Report</h2>
    <form action="/items/{{item.id}}/delete" method="POST">
      <button type="submit">Delete Report</button>
    </form>
  </section>

  <a href="/">Back to Dashboard</a>
</div>
